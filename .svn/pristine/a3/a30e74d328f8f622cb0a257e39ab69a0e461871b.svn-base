package cn.uce.suc.bkg.service.operation;

import java.util.List;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;

import cn.uce.base.page.Page;
import cn.uce.base.page.Pagination;
import cn.uce.suc.bkg.dao.operation.IFreightDemandDao;
import cn.uce.suc.bkg.entity.operation.FreightDemand;
import cn.uce.suc.bkg.vo.operation.FreightDemandVo;

/**
 * @Description: 货运需求表Service类
 * @author yanglei
 * @date 2017年10月19日 下午12:12:42
 */
@Service("freightDemandService")
public class FreightDemandService {
	/**
	 * 注入货运需求表Dao
	 */
	@Resource
	private IFreightDemandDao freightDemandDao;
	
	/**
	 * @Description: 新增货运需求表
	 * @param freightDemand 货运需求表
	 * @return 受影响行数
	 * @author UCE-lixueyuan
	 * @date 2017年10月18日 上午09:57:44
	 */
	public int addFreightDemand(FreightDemand freightDemand) {
		return freightDemandDao.insert(freightDemand);
	}
	
	/**
	 * @Description: 修改货运需求表
	 * @param freightDemand 货运需求表
	 * @return 受影响行数
	 * @author UCE-lixueyuan
	 * @date 2017年10月18日 上午09:57:44
	 */
	public int updateById(FreightDemand freightDemand) {
		return freightDemandDao.updateById(freightDemand);
	}
	
	/**
	 * @Description: 删除货运需求表
	 * @param id 主键
	 * @return 受影响行数
	 * @author UCE-lixueyuan
	 * @date 2017年10月18日 上午09:57:44
	 */
	public int deleteById(Long id) {
		return freightDemandDao.deleteById(id);
	}
	
	/**
	 * @Description: 根据ID查询货运需求表
	 * @param id 主键
	 * @return 货运需求表
	 * @author UCE-lixueyuan
	 * @date 2017年10月18日 上午09:57:44
	 */
	public FreightDemand findById(Long id) {
		return freightDemandDao.findById(id);
	}
	
	/**
	 * @Description: 分页查询货运需求表
	 * @param freightDemandVo 货运需求表
	 * @param page 分页参数
	 * @return 货运需求表
	 * @author UCE-lixueyuan
	 * @date 2017年10月18日 上午09:57:44
	 */
	public Pagination<FreightDemandVo> findByPagination(FreightDemandVo freightDemandVo, Page page) {
		Pagination<FreightDemandVo> paginationFreightDemand = freightDemandDao.findByPagination(freightDemandVo, page);
		return paginationFreightDemand;
	}
	/**
	 * @Description: 网点端 分页查询货运需求表
	 * @param freightDemandVo 货运需求表
	 * @param page 分页参数
	 * @return 货运需求表
	 * @author UCE-lixueyuan
	 * @date 2017年10月18日 上午09:57:44
	 */
	public Pagination<FreightDemandVo> findDotByPagination(FreightDemandVo freightDemandVo, Page page){
		Pagination<FreightDemandVo> paginationFreightDemand = freightDemandDao.findDotByPagination(freightDemandVo, page);
		return paginationFreightDemand;
	}
	/**
	 * 
	 * @Description: 查询货运需求表
	 * @param freightDemandVo
	 * @return
	 * @author lixueyuan
	 * @date 2017年10月24日 下午5:03:44
	 */
	public List<FreightDemandVo> findByCondition(FreightDemandVo freightDemandVo) {
		List<FreightDemandVo> freightDemands = freightDemandDao.findByCondition(freightDemandVo);
		return freightDemands;
	}
	
	/**
	 * 
	 * @Description: 根据需求编码 批量更新 需求的需求组合编码
	 * @param freightDemandVos
	 * @return
	 * @author lixueyuan
	 * @date 2017年10月24日 下午5:26:09
	 */
	public int  batchUpdateDemand(List<FreightDemandVo> freightDemandVos){
		return freightDemandDao.batchUpdateDemand(freightDemandVos);
		
	}
	/**
	 * 
	 * @Description: 根据组合需求查询需求 
	 * @param freightDemandVo
	 * @return
	 * @author laizhendong
	 * @date 2017年10月26日 下午11:50:58
	 */
	public List<FreightDemandVo> findByCombine(FreightDemandVo freightDemandVo){
		return freightDemandDao.findByCombine(freightDemandVo);
	}
	/**
	 * 根据需求组合编码 批量修改 需求状态 
	 * @param combineCodes
	 * @param params
	 * @return
	 */
	public int  batchUpdateDemandStatusByCombineCode(List<String> combineCodes,FreightDemandVo params){
		return freightDemandDao.batchUpdateDemandStatusByCombineCode(combineCodes, params.getDemandStatus(),params.getUpdateEmp(),params.getUpdateOrg(),params.getUpdateTime());
		
	}
	
	/**
	 * 
	 * @Description: 查询货运需求表
	 * @param freightDemandVo
	 * @return
	 * @author lixueyuan
	 * @date 2017年10月24日 下午5:01:15
	 */
	public List<FreightDemandVo>  findByDemandCombineCode(List<String> combineCodes){
		return freightDemandDao.findByDemandCombineCode(combineCodes);
	}
	
	/**
	 * 
	 * @Description: 根据需求编号更新执行时间
	 * @param freightDemandVo
	 * @return
	 * @author laizhendong
	 * @date 2017年11月16日 下午7:30:43
	 */
	public int updateByDemandCode(List<FreightDemandVo> freightDemandVos){
		return freightDemandDao.updateByDemandCode(freightDemandVos);
	}
}