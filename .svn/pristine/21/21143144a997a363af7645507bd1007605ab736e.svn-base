package cn.uce.suc.bkg.service.operation;

import java.util.List;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;

import cn.uce.base.page.Page;
import cn.uce.base.page.Pagination;
import cn.uce.suc.bkg.entity.operation.LineGroupDetail;
import cn.uce.suc.bkg.vo.operation.LineGroupDetailVo;
import cn.uce.suc.bkg.dao.operation.ILineGroupDetailDao;

/**
 * @Description: 班次管理明细Service类
 * @author litianjian
 * @date 2017年10月21日 下午05:40:59
 */
@Service("lineGroupDetailService")
public class LineGroupDetailService {
	
	/**
	 * 注入班次管理明细Dao
	 */
	@Resource
	private ILineGroupDetailDao lineGroupDetailDao;
	
	/**
	 * @Description: 新增班次管理明细
	 * @param lineGroupDetail 班次管理明细
	 * @return 受影响行数
	 * @author litianjian
	 * @date 2017年10月21日 下午05:40:59
	 */
	public int addLineGroupDetail(LineGroupDetail lineGroupDetail) {
		return lineGroupDetailDao.insert(lineGroupDetail);
	}
	
	/**
	 * @Description: 修改班次管理明细
	 * @param lineGroupDetail 班次管理明细
	 * @return 受影响行数
	 * @author litianjian
	 * @date 2017年10月21日 下午05:40:59
	 */
	public int updateById(LineGroupDetail lineGroupDetail) {
		return lineGroupDetailDao.updateById(lineGroupDetail);
	}
	
	/**
	 * @Description: 删除班次管理明细
	 * @param id 主键
	 * @return 受影响行数
	 * @author litianjian
	 * @date 2017年10月21日 下午05:40:59
	 */
	public int deleteById(Long id) {
		return lineGroupDetailDao.deleteById(id);
	}
	
	/**
	 * @Description: 根据ID查询班次管理明细
	 * @param id 主键
	 * @return 班次管理明细
	 * @author litianjian
	 * @date 2017年10月21日 下午05:40:59
	 */
	public LineGroupDetail findById(Long id) {
		return lineGroupDetailDao.findById(id);
	}
	
	/**
	 * @Description: 分页查询班次管理明细
	 * @param lineGroupDetailVo 班次管理明细
	 * @param page 分页参数
	 * @return 班次管理明细
	 * @author litianjian
	 * @date 2017年10月21日 下午05:40:59
	 */
	public Pagination<LineGroupDetailVo> findByPagination(LineGroupDetailVo lineGroupDetailVo, Page page) {
		Pagination<LineGroupDetailVo> paginationLineGroupDetail = lineGroupDetailDao.findByPagination(lineGroupDetailVo, page);
		return paginationLineGroupDetail;
	}
	
	
	public List<LineGroupDetail> queryByWorkDetailId(String lineGroupCode){
		return lineGroupDetailDao.queryByWorkDetailId(lineGroupCode);
	}
	
	public Pagination<LineGroupDetail> findPageByPagination(String lineGroupCode, Page page){
		return lineGroupDetailDao.findPageByPagination(lineGroupCode, page);
	}
	
	/**
	 * 
	 * @Description:获取未排班的班次路段--即班次编号为空
	 * @return
	 * @author liwei
	 * @param lineGroupDetail 
	 * @date 2017年11月9日 上午12:18:00
	 */
	public List<LineGroupDetail> findGroupDetailByGroupcodeIsNull(LineGroupDetailVo lineGroupDetailVo){
		return lineGroupDetailDao.findGroupDetailByGroupcodeIsNull(lineGroupDetailVo);
	}
}