package cn.uce.suc.app.control;

import java.util.Map;

import javax.annotation.Resource;

import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.bind.annotation.RestController;

import cn.uce.suc.common.biz.IVersionBiz;
import cn.uce.suc.common.util.BaseAppController;
import cn.uce.suc.common.vo.VersionVo;
/**
 * 
 * @Description: 版本更新管理器 
 * @author liwei
 * @date 2017年11月12日 下午2:44:30
 */
@RestController
@RequestMapping("/appVersion")
public class AppVersionController extends BaseAppController {
	/**
	 * 版本管理
	 */
	@Resource
	private IVersionBiz versionBiz;
	/**
	 * 
	 * @Description: 版本更新
	 * @return
	 * @author liwei
	 * @date 2017年11月12日 下午2:45:22
	 */
	@PostMapping(value = "/versionCheck")
	@ResponseBody
	public Map<String,Object> versionUpdate(@RequestBody VersionVo versionVo){
		return returnSuccess(versionBiz.versionCheck(versionVo));
	}

}
