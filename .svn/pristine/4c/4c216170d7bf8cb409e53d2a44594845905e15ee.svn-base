package cn.uce.suc.common.service;

import java.util.List;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;

import cn.uce.base.page.Page;
import cn.uce.base.page.Pagination;
import cn.uce.core.cache.CacheManager;
import cn.uce.suc.common.entity.SystemConfig;
import cn.uce.suc.common.vo.SystemConfigVo;
import cn.uce.suc.common.dao.ISystemConfigDao;

/**
 * @Description: 系统配置表Service类
 * @author UCE-CodeGenerator
 * @date 2017年11月02日 上午10:10:03
 */
@Service("systemConfigService")
public class SystemConfigService {

	/**
	 * 注入系统配置表Dao
	 */
	@Resource
	private ISystemConfigDao systemConfigDao;

	/**
	 * @Description: 新增系统配置表
	 * @param systemConfig
	 *            系统配置表
	 * @return 受影响行数
	 * @author UCE-CodeGenerator
	 * @date 2017年11月02日 上午10:10:03
	 */
	public int addSystemConfig(SystemConfig systemConfig) {
		return systemConfigDao.insert(systemConfig);
	}

	/**
	 * @Description: 修改系统配置表
	 * @param systemConfig
	 *            系统配置表
	 * @return 受影响行数
	 * @author UCE-CodeGenerator
	 * @date 2017年11月02日 上午10:10:03
	 */
	public int updateById(SystemConfig systemConfig) {
		int i = systemConfigDao.updateById(systemConfig);
		//刷新缓存方法
		if (i > 0) {
			CacheManager.getInstance().getCache("SystemConfigCache").refresh(systemConfig.getConfigCode());
		}
		return i;
	}

	/**
	 * @Description: 删除系统配置表
	 * @param id
	 *            主键
	 * @return 受影响行数
	 * @author UCE-CodeGenerator
	 * @date 2017年11月02日 上午10:10:03
	 */
	public int deleteById(Long id) {
		return systemConfigDao.deleteById(id);
	}

	/**
	 * @Description: 根据ID查询系统配置表
	 * @param id
	 *            主键
	 * @return 系统配置表
	 * @author UCE-CodeGenerator
	 * @date 2017年11月02日 上午10:10:03
	 */
	public SystemConfig findById(Long id) {
		return systemConfigDao.findById(id);
	}

	/**
	 * @Description: 分页查询系统配置表
	 * @param systemConfigVo
	 *            系统配置表
	 * @param page
	 *            分页参数
	 * @return 系统配置表
	 * @author UCE-CodeGenerator
	 * @date 2017年11月02日 上午10:10:03
	 */
	public Pagination<SystemConfig> findByPagination(SystemConfigVo systemConfigVo, Page page) {
		Pagination<SystemConfig> paginationSystemConfig = systemConfigDao.findByPagination(systemConfigVo, page);
		return paginationSystemConfig;
	}

	/**
	 * 
	 * @Description: TODO(这里用一句话描述这个方法的作用)
	 * @return
	 * @author liwei
	 * @date 2017年11月2日 上午10:48:41
	 */
	public SystemConfig findSysConfigBycode(String configCode) {
		return systemConfigDao.findSysConfigBycode(configCode);
	}

	/**
	 * 
	 * @Description: 根据条件查询系统配置信息
	 * @param systemConfigVo
	 * @return
	 * @author wangzhijun
	 * @date 2017年11月2日 下午2:58:14
	 */
	public List<SystemConfig> findByCondition(SystemConfigVo systemConfigVo) {
		return systemConfigDao.findByCondition(systemConfigVo);
	}
}