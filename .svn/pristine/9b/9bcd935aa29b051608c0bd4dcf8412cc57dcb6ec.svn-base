package cn.uce.suc.common.util;
/**
 * 
 * @Description:经纬度计算距离
 * @author liwei
 * @date 2017年11月13日 下午4:57:44
 */
public class BaiduDistanceUtil {
	/**
	 * 
	 * @Description: 获取距离
	 * @param lat1
	 * @param lon1
	 * @param lat2
	 * @param lon2
	 * @return
	 * @author liwei
	 * @date 2017年11月13日 下午4:58:05
	 */
	public static double getDistance(double lat1, double lon1, double lat2, double lon2) {
		double PI = 3.141592653589793231462643383279169399375;
		double latR = 6378140, lonR = 6356755;
		double j = ((lon2 - lon1) * PI * lonR * Math.cos(Math.toRadians(((lat1 + lat2) / 2) * PI / 180)) / 180)
				* Math.cos(Math.toRadians((lat1 + lat2) / 2));
		double w = (lat2 - lat1) * PI * latR / 180;
		return Math.hypot(j, w);
	}
	
	public static void main(String[] args){
	System.out.println(getDistance(116.411743, 39.951671, 117.411743, 39.951671));
	}
}
