package cn.uce.suc.bkg.control.infomon;

import java.util.Map;

import javax.annotation.Resource;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import cn.uce.base.page.Page;
import cn.uce.suc.common.biz.imp.MobileuserBiz;
import cn.uce.suc.common.vo.MobileuserVo;
import cn.uce.web.common.base.BaseController;
/**
 * 
 * @Description: 手机用户信息
 * @author huhaizhou
 * @date 2017年11月30日 上午11:33:38
 */
@Controller
@RequestMapping("/appUser")
public class AppUserController extends BaseController{
	
	/**
	 * 注入MobileuserBiz
	 */
	@Resource
	private MobileuserBiz mobileuserBiz;
	
	
	/**
	 * @Description: 分页条件获取
	 * @param mobileuserVo 手机用户信息
	 * @param page 分页参数
	 * @return  查询到的手机用户信息
	 * @author UCE-haizhou
	 * @date 2017年10月30日 下午13:37:13
	 */
	@RequestMapping("/getUser")
	@ResponseBody
	public Map<String, Object> getVague(MobileuserVo mobileuserVo, Page page) {
		return returnSuccess(mobileuserBiz.findByPagination(mobileuserVo, page));
	}
}
