package cn.uce.suc.bkg.control.operation;

import java.util.List;

import javax.annotation.Resource;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import cn.uce.suc.bkg.biz.price.IPricingRuleTypeDetailBiz;
import cn.uce.suc.bkg.vo.price.PricingRuleTypeDetailVo;
import cn.uce.web.common.base.BaseController;

/**
 * 
 * @Description: 定价规则明细
 * @author wangzhijun
 * @date 2017年11月6日 下午5:56:58
 */
@Controller
@RequestMapping("/pricingRuleTypeDetail")
public class PricingRuleTypeDetailController extends BaseController {

	/**
	 * 注入biz对象
	 */
	@Resource
	IPricingRuleTypeDetailBiz pricingRuleTypeDetailBiz;

	/**
	 * 
	 * @Description: 根据定价规则编码查询明细
	 * @param ruleCode
	 * @return
	 * @author wangzhijun
	 * @date 2017年11月6日 下午6:26:11
	 */
	@RequestMapping(value = "/getGroupByCondition")
	@ResponseBody
	public List<PricingRuleTypeDetailVo> getGroupByCondition(PricingRuleTypeDetailVo detailVo) {
		return pricingRuleTypeDetailBiz.getGroupByCondition(detailVo);
	}
}
