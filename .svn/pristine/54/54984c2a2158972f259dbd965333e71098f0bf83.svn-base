package cn.uce.suc.bkg.service.datamain;

import java.util.List;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;

import cn.uce.base.page.Page;
import cn.uce.base.page.Pagination;
import cn.uce.suc.bkg.entity.datamain.ExceptionManager;
import cn.uce.suc.bkg.vo.datamain.ExceptionManagerVo;
import cn.uce.suc.bkg.dao.datamain.IExceptionManagerDao;

/**
 * @Description: 运输异常管理Service类
 * @author yanglei
 * @date 2017年10月31日 下午03:48:43
 */
@Service("exceptionService")
public class ExceptionManagerService {
	
	/**
	 * 注入运输异常管理Dao
	 */
	@Resource
	private IExceptionManagerDao exceptionDao;
	
	/**
	 * @Description: 新增运输异常管理
	 * @param exception 运输异常管理
	 * @return 受影响行数
	 * @author yanglei
	 * @date 2017年10月31日 下午03:48:43
	 */
	public int addException(ExceptionManager exception) {
		return exceptionDao.insert(exception);
	}
	
	/**
	 * @Description: 修改运输异常管理
	 * @param exception 运输异常管理
	 * @return 受影响行数
	 * @author yanglei
	 * @date 2017年10月31日 下午03:48:43
	 */
	public int updateById(ExceptionManager exception) {
		return exceptionDao.updateById(exception);
	}
	
	/**
	 * @Description: 删除运输异常管理
	 * @param id 主键
	 * @return 受影响行数
	 * @author yanglei
	 * @date 2017年10月31日 下午03:48:43
	 */
	public int deleteById(Long id) {
		return exceptionDao.deleteById(id);
	}
	
	/**
	 * @Description: 根据ID查询运输异常管理
	 * @param id 主键
	 * @return 运输异常管理
	 * @author yanglei
	 * @date 2017年10月31日 下午03:48:43
	 */
	public ExceptionManager findById(Long id) {
		return exceptionDao.findById(id);
	}
	
	/**
	 * @Description: 分页查询运输异常管理
	 * @param exceptionVo 运输异常管理
	 * @param page 分页参数
	 * @return 运输异常管理
	 * @author yanglei
	 * @date 2017年10月31日 下午03:48:43
	 */
	public Pagination<ExceptionManagerVo> findByPagination(ExceptionManagerVo exceptionVo, Page page) {
		Pagination<ExceptionManagerVo> paginationException = exceptionDao.findByPagination(exceptionVo, page);
		return paginationException;
	}
	/**
	 * @Description: 查询运输异常管理list
	 * @param exceptionVo 运输异常管理
	 * @return 运输异常管理
	 * @author yanglei
	 * @date 2017年10月7日 下午03:48:43
	 */
	public List<ExceptionManager> findByVo(ExceptionManagerVo exceptionVo, Page page){
		return exceptionDao.findByVo(exceptionVo,page);
	}
}