package cn.uce.suc.bkg.control.datastatis;

import java.util.List;
import java.util.Map;

import javax.annotation.Resource;

import org.springframework.stereotype.Controller;
import org.springframework.ui.ModelMap;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import cn.uce.base.page.Page;
import cn.uce.base.page.Pagination;
import cn.uce.core.excel.entity.vo.NormalExcelConstants;
import cn.uce.core.poi.excel.entity.ExportParams;
import cn.uce.suc.bkg.biz.datastatis.IFreightContrastReportBiz;
import cn.uce.suc.bkg.vo.datastatis.FreightContrastReportVo;
import cn.uce.suc.common.util.DataConversionUtil;
import cn.uce.web.common.base.BaseController;
import cn.uce.web.common.util.WebUtil;

/**
 * @Description:  货量差异数据统计报表 controller
 * @author xiesonglin
 * @date 2017年12月4日 下午7:00:41
 */
@Controller
@RequestMapping(value="/freightContrastReport")
public class FreightContrastReportController extends BaseController {

	/**
	 * biz注入
	 */
	@Resource
	private IFreightContrastReportBiz freightContrastReportBiz;
	
	/**
	 * 
	 * @Description:  货量差异数据统计报表 页面入口 
	 * @return
	 * @author xiesonglin
	 * @date 2017年12月4日 下午7:01:37
	 */
	@RequestMapping(value="/forward")
	public String forward(){
		return "bkg/freightContrastReport";
	}
	
	/**
	 * @Description:  根据分页查询货量差异数据统计 
	 * @param freightContrastReportVo
	 * @param page
	 * @return
	 * @author xiesonglin
	 * @date 2017年12月4日 下午7:06:03
	 */
	@RequestMapping(value="findFreightContrastReportByPage")
	@ResponseBody
	public Map<String,Object> findFreightContrastReportByPage(FreightContrastReportVo freightContrastReportVo,Page page){
		Pagination<FreightContrastReportVo> pagination=this.freightContrastReportBiz.findFreightContrastReportByPage(freightContrastReportVo, page);
		return returnSuccess(pagination);
	}
	
	/**
	 * 
	 * @Description:  数据导出 货量差异数据统计
	 * @param driverEvaluateReportVo
	 * @param map
	 * @return
	 * @author xiesonglin
	 * @date 2017年12月5日 下午4:21:49
	 */
	@RequestMapping(value="exportXls")
	public String exportXls(FreightContrastReportVo freightContrastReportVo,ModelMap map){
		List<FreightContrastReportVo> vos=this.freightContrastReportBiz.findByExport(freightContrastReportVo);
		map.put(NormalExcelConstants.FILE_NAME, "货量差异数据统计");
		map.put(NormalExcelConstants.CLASS, FreightContrastReportVo.class);
		map.put(NormalExcelConstants.PARAMS, new ExportParams("货量差异数据统计", "导出人:"+DataConversionUtil.getUserInfo(WebUtil.getCurrentUser()).getEmpName(), "导出信息"));
		map.put(NormalExcelConstants.DATA_LIST, vos);
		return NormalExcelConstants.JEECG_EXCEL_VIEW;
	}
}
