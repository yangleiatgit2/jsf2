/**
 * 
 * @Description:单元测试
 * @author wangzhijun
 * @date 2017年11月10日 下午2:06:14
 */
@WebAppConfiguration
@RunWith(SpringJUnit4ClassRunner.class)
@ContextConfiguration(locations = { "classpath*:spring-*.xml", "classpath*:*/spring-*.xml" })
public class PricingRuleTypeDetailBizTest extends AbstractJUnit4SpringContextTests {
	/**
	 * 注入biz
	 */
	@Resource
	private IPricingRuleTypeDetailBiz PricingRuleTypeDetailBiz;
	/**
	 * 
	 */
	private PricingRuleTypeDetailVo detailVo;
	private PricingRuleTypeDetail detail;
	private Page page;

	/**
	 * 
	 * @Description: 初始化对象
	 * @author wangzhijun
	 * @date 2017年11月10日 下午2:18:54
	 */
	@Before
	public void init() {
		detailVo = new PricingRuleTypeDetailVo();
		detailVo.setRuleTypeId(1L);
		detail = new PricingRuleTypeDetail();
		detail = ObjectConvertUtil.convertObject(detailVo, PricingRuleTypeDetail.class);
		detail.setUtf1("Test");
		page = new Page();
		page.setCurrentPage(1);
	}

	@Test
	public void test() {
		PricingRuleTypeDetailBiz.addPricingRuleTypeDetail(detail);
		PricingRuleTypeDetailBiz.updatePricingRuleTypeDetail(detail);
		PricingRuleTypeDetailBiz.findById(detail.getId());
		PricingRuleTypeDetailBiz.findByPagination(detailVo, page);
		PricingRuleTypeDetailBiz.getGroupByCondition(detailVo);
		PricingRuleTypeDetailBiz.deletePricingRuleTypeDetail(detail.getId());
	}
