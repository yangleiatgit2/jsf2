package cn.uce.suc.bkg.biz.impl.operation;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;

import cn.uce.base.page.Page;
import cn.uce.base.page.Pagination;
import cn.uce.suc.bkg.biz.operation.ICarTraceBiz;
import cn.uce.suc.bkg.entity.operation.CarTrace;
import cn.uce.suc.bkg.vo.operation.CarTraceVo;
import cn.uce.suc.bkg.service.operation.CarTraceService;

/**
 * @Description: 车辆轨迹信息BIZ实现类
 * @author liwei
 * @date 2017年10月31日 上午10:46:42
 */
@Service("carTraceBiz")
public class CarTraceBiz implements ICarTraceBiz {
	
	/**
	 * 注入车辆轨迹信息Service
	 */
	@Resource
	private CarTraceService carTraceService;
	
	/**
	 * @Description: 新增车辆轨迹信息
	 * @param carTrace
	 * @return 受影响行数
	 * @author liwei
	 * @date 2017年10月31日 上午10:46:42
	 */
	public int addCarTrace(CarTrace carTrace) {
		return carTraceService.addCarTrace(carTrace);
	}
	
	/**
	 * @Description: 修改车辆轨迹信息
	 * @param carTrace 车辆轨迹信息
	 * @return 受影响行数
	 * @author liwei
	 * @date 2017年10月31日 上午10:46:42
	 */
	public int updateCarTrace(CarTrace carTrace) {
		return carTraceService.updateById(carTrace);
	}
	
	/**
	 * @Description: 删除车辆轨迹信息
	 * @param id 主键
	 * @return 受影响行数
	 * @author liwei
	 * @date 2017年10月31日 上午10:46:42
	 */
	public int deleteCarTrace(Long id) {
		return carTraceService.deleteById(id);
	}
	
	/**
	 * @Description: 根据ID查询车辆轨迹信息
	 * @param id 主键
	 * @return 车辆轨迹信息
	 * @author liwei
	 * @date 2017年10月31日 上午10:46:42
	 */
	@Override
	public CarTrace findById(Long id) {
		return carTraceService.findById(id);
	}
	
	/**
	 * @Description: 分页查询车辆轨迹信息
	 * @param carTraceVo 车辆轨迹信息
	 * @param page 分页参数
	 * @return 车辆轨迹信息
	 * @author liwei
	 * @date 2017年10月31日 上午10:46:42
	 */
	public Pagination<CarTrace> findByPagination(CarTraceVo carTraceVo, Page page) {
		Pagination<CarTrace> pagination = carTraceService.findByPagination(carTraceVo, page);
		return pagination;
	}

}