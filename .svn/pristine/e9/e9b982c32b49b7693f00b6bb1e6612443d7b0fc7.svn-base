package cn.uce.suc.bkg.control.datastatis;

import java.util.List;
import java.util.Map;

import javax.annotation.Resource;

import org.springframework.stereotype.Controller;
import org.springframework.ui.ModelMap;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import cn.uce.base.page.Page;
import cn.uce.core.excel.entity.vo.NormalExcelConstants;
import cn.uce.core.poi.excel.entity.ExportParams;
import cn.uce.suc.bkg.biz.datastatis.IDriverEvaluateReportBiz;
import cn.uce.suc.bkg.vo.datastatis.DriverEvaluateReportVo;
import cn.uce.suc.common.util.DataConversionUtil;
import cn.uce.web.common.base.BaseController;
import cn.uce.web.common.util.WebUtil;

/**
 * 
 * @Description:  司机服务评价报表Controller
 * @author xiesonglin
 * @date 2017年11月30日 上午11:33:38
 */
@Controller
@RequestMapping(value="driverEvaluateReport")
public class DriverEvaluateReportController extends BaseController{

	/**
	 * Biz 注入
	 */
	@Resource
	private IDriverEvaluateReportBiz driverEvaluateReportBiz;
	
	/**
	 * 
	 * @Description:  主页面跳转 司机评分报表
	 * @return
	 * @author xiesonglin
	 * @date 2017年11月30日 下午6:13:53
	 */
	@RequestMapping(value="forward")
	public String forward(){
		return "bkg/driverEvaluateReport";
	}
	
	/**
	 * 
	 * @Description:  根据分页查询司机服务评价
	 * @return
	 * @author xiesonglin
	 * @date 2017年12月1日 上午11:22:26
	 */
	@RequestMapping(value="findDriverEvaluateReportByPage")
	@ResponseBody
	public Map<String,Object> findDriverEvaluateReportByPagination(DriverEvaluateReportVo driverEvaluateReportVo,Page page){
		return returnSuccess(this.driverEvaluateReportBiz.findDriverEvaluateReportByPage(driverEvaluateReportVo, page));
	}
	
	/**
	 * @Description:  报表导出
	 * @param driverEvaluateReportVo
	 * @param map
	 * @return
	 * @author xiesonglin
	 * @date 2017年12月4日 下午7:18:09
	 */
	@RequestMapping(value="exportXls")
	public String exportXls(DriverEvaluateReportVo driverEvaluateReportVo,ModelMap map){
		List<DriverEvaluateReportVo> vos=this.driverEvaluateReportBiz.findByExport(driverEvaluateReportVo);
		map.put(NormalExcelConstants.FILE_NAME, "司机服务评价统计报表");
		//List<CarExportVo> usersVos = ObjectConvertUtil.convertList(pageUsers.getData(), CarExportVo.class);
		map.put(NormalExcelConstants.CLASS, DriverEvaluateReportVo.class);
		map.put(NormalExcelConstants.PARAMS, new ExportParams("司机服务评价统计报表", "导出人:"+DataConversionUtil.getUserInfo(WebUtil.getCurrentUser()).getEmpName(), "导出信息"));
		map.put(NormalExcelConstants.DATA_LIST, vos);
		return NormalExcelConstants.JEECG_EXCEL_VIEW;
	}
}
