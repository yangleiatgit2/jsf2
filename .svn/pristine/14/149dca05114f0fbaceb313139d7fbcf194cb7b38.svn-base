package cn.uce.suc.bkg.biz.impl.datamain;

import java.util.List;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;

import cn.uce.base.page.Page;
import cn.uce.base.page.Pagination;
import cn.uce.suc.bkg.biz.datamain.IExceptionTraceBiz;
import cn.uce.suc.bkg.entity.datamain.ExceptionTrace;
import cn.uce.suc.bkg.service.datamain.ExceptionTraceService;
import cn.uce.suc.bkg.vo.datamain.ExceptionTraceVo;

/**
 * @Description: 异常跟踪信息BIZ实现类
 * @author yanglei
 * @date 2017年11月01日 上午11:26:20
 */
@Service("exceptionTraceBiz")
public class ExceptionTraceBiz implements IExceptionTraceBiz {
	
	/**
	 * 注入异常跟踪信息Service
	 */
	@Resource
	private ExceptionTraceService exceptionTraceService;
	
	/**
	 * @Description: 新增异常跟踪信息
	 * @param exceptionTrace
	 * @return 受影响行数
	 * @author yanglei
	 * @date 2017年11月01日 上午11:26:20
	 */
	public int addExceptionTrace(ExceptionTrace exceptionTrace) {
		return exceptionTraceService.addExceptionTrace(exceptionTrace);
	}
	
	/**
	 * @Description: 修改异常跟踪信息
	 * @param exceptionTrace 异常跟踪信息
	 * @return 受影响行数
	 * @author yanglei
	 * @date 2017年11月01日 上午11:26:20
	 */
	public int updateExceptionTrace(ExceptionTrace exceptionTrace) {
		return exceptionTraceService.updateById(exceptionTrace);
	}
	
	/**
	 * @Description: 删除异常跟踪信息
	 * @param id 主键
	 * @return 受影响行数
	 * @author yanglei
	 * @date 2017年11月01日 上午11:26:20
	 */
	public int deleteExceptionTrace(Long id) {
		return exceptionTraceService.deleteById(id);
	}
	
	/**
	 * @Description: 根据ID查询异常跟踪信息
	 * @param id 主键
	 * @return 异常跟踪信息
	 * @author yanglei
	 * @date 2017年11月01日 上午11:26:20
	 */
	@Override
	public ExceptionTrace findById(Long id) {
		return exceptionTraceService.findById(id);
	}
	
	/**
	 * @Description: 分页查询异常跟踪信息
	 * @param exceptionTraceVo 异常跟踪信息
	 * @param page 分页参数
	 * @return 异常跟踪信息
	 * @author yanglei
	 * @date 2017年11月01日 上午11:26:20
	 */
	public Pagination<ExceptionTrace> findByPagination(ExceptionTraceVo exceptionTraceVo, Page page) {
		Pagination<ExceptionTrace> pagination = exceptionTraceService.findByPagination(exceptionTraceVo, page);
		return pagination;
	}
	/**
	 * @Description: 根据异常code查询异常跟踪信息
	 * @param exceptionCode
	 * @return 异常跟踪信息
	 * @author yanglei
	 * @date 2017年11月07日 上午11:26:20
	 */
	public List<ExceptionTrace> findByExceptionCode(String exceptionCode){
		return exceptionTraceService.findByExceptionCode(exceptionCode);
	}
}