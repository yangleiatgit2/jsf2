package cn.uce.suc.bkg.biz.impl.datamain;

import javax.annotation.Resource;

import org.junit.Before;
import org.junit.Test;
import org.junit.runner.RunWith;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.test.context.ContextConfiguration;
import org.springframework.test.context.junit4.AbstractJUnit4SpringContextTests;
import org.springframework.test.context.junit4.SpringJUnit4ClassRunner;
import org.springframework.test.context.web.WebAppConfiguration;

import cn.uce.base.page.Page;
import cn.uce.suc.bkg.biz.datamain.IDeliveryRelationBiz;
import cn.uce.suc.bkg.entity.datamain.DeliveryRelation;
import cn.uce.suc.bkg.vo.datamain.DeliveryRelationVo;
import cn.uce.web.common.util.ObjectConvertUtil;


/**
 * 
 * @Description: 交货关系单元测试
 * @author wangzhijun
 * @date 2017年11月28日 下午5:03:02
 */
@WebAppConfiguration
@RunWith(SpringJUnit4ClassRunner.class)
@ContextConfiguration(locations = { "classpath*:spring-*.xml", "classpath*:*/spring-*.xml" })
public class DeliveryRelationBizTest extends AbstractJUnit4SpringContextTests{

	private final static Logger logger = LoggerFactory.getLogger(DeliveryRelationBizTest.class);
	
	/**
	 * 注入交货关系biz
	 */
	@Resource
	private IDeliveryRelationBiz  deliveryRelationBiz;
	
	/**
	 * 声明变量
	 */
	private DeliveryRelation deliveryRelation;
	private Page page;
	private DeliveryRelationVo deliveryRelationVo;
	
	/**
	 * 
	 * @Description: 初始化对象 
	 * @author wangzhijun
	 * @date 2017年11月28日 下午5:05:59
	 */
	@Before
	public void init(){
		deliveryRelation = new DeliveryRelation();
		deliveryRelation.setWorkcenterCode("UC000014");
		deliveryRelation.setSiteCode("UC000070");
		
		deliveryRelationVo = new DeliveryRelationVo();
		deliveryRelationVo = ObjectConvertUtil.convertObject(deliveryRelation, deliveryRelationVo.getClass());
		
		page = new Page();
		page.setCurrentPage(1);
	}
	
	/**
	 * 
	 * @Description: 单元测试开始 
	 * @author wangzhijun
	 * @date 2017年11月28日 下午5:06:14
	 */
	@Test
	public void test(){
		deliveryRelationBiz.addDeliveryRelation(deliveryRelation);
		try {
			deliveryRelationBiz.addDeliveryRelation(deliveryRelation);
		} catch (Exception e) {
			logger.info(e.getMessage());
		}
		deliveryRelationBiz.findById(deliveryRelation.getId());
		deliveryRelationBiz.findByPagination(deliveryRelationVo, page);
		deliveryRelationBiz.updateDeliveryRelation(deliveryRelation);
		String ids = deliveryRelation.getId().toString();
		deliveryRelationBiz.deleteDeliveryRelation(deliveryRelation.getId());
		deliveryRelationBiz.deleteBatch(ids);
	}
}
