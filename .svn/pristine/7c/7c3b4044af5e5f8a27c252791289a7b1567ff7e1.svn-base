package cn.uce.suc.bkg.service.datamain;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;

import cn.uce.base.page.Page;
import cn.uce.base.page.Pagination;
import cn.uce.suc.bkg.dao.datamain.ICapacityGapManagementDao;
import cn.uce.suc.bkg.entity.datamain.CapacityGapManagement;
import cn.uce.suc.bkg.vo.datamain.CapacityGapManagementVo;

/**
 * @Description: 运力缺口管理Service类
 * @author yanglei
 * @date 2017年10月25日 下午03:24:55
 */
@Service("capacityGapManagementService")
public class CapacityGapManagementService {
	
	/**
	 * 注入运力缺口管理Dao
	 */
	@Resource
	private ICapacityGapManagementDao capacityGapManagementDao;
	
	/**
	 * @Description: 新增运力缺口管理
	 * @param capacityGapManagement 运力缺口管理
	 * @return 受影响行数
	 * @author yanglei
	 * @date 2017年10月25日 下午03:24:55
	 */
	public int addCapacityGapManagement(CapacityGapManagement capacityGapManagement) {
		return capacityGapManagementDao.insert(capacityGapManagement);
	}
	
	/**
	 * @Description: 修改运力缺口管理
	 * @param capacityGapManagement 运力缺口管理
	 * @return 受影响行数
	 * @author yanglei
	 * @date 2017年10月25日 下午03:24:55
	 */
	public int updateById(CapacityGapManagement capacityGapManagement) {
		return capacityGapManagementDao.updateById(capacityGapManagement);
	}
	
	/**
	 * @Description: 删除运力缺口管理
	 * @param id 主键
	 * @return 受影响行数
	 * @author yanglei
	 * @date 2017年10月25日 下午03:24:55
	 */
	public int deleteById(Long id) {
		return capacityGapManagementDao.deleteById(id);
	}
	
	/**
	 * @Description: 根据ID查询运力缺口管理
	 * @param id 主键
	 * @return 运力缺口管理
	 * @author yanglei
	 * @date 2017年10月25日 下午03:24:55
	 */
	public CapacityGapManagement findById(Long id) {
		return capacityGapManagementDao.findById(id);
	}
	
	/**
	 * @Description: 分页查询运力缺口管理
	 * @param capacityGapManagementVo 运力缺口管理
	 * @param page 分页参数
	 * @return 运力缺口管理
	 * @author yanglei
	 * @date 2017年10月25日 下午03:24:55
	 */
	public Pagination<CapacityGapManagementVo> findByPagination(CapacityGapManagementVo capacityGapManagementVo, Page page) {
		Pagination<CapacityGapManagementVo> paginationCapacityGapManagement = capacityGapManagementDao.findByPagination(capacityGapManagementVo, page);
		return paginationCapacityGapManagement;
	}
	
}