package cn.uce.suc.bkg.service.operation;

import java.util.List;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;

import cn.uce.base.page.Page;
import cn.uce.base.page.Pagination;
import cn.uce.suc.bkg.dao.operation.IFreightDemandCombineDao;
import cn.uce.suc.bkg.entity.operation.FreightDemandCombine;
import cn.uce.suc.bkg.vo.operation.FreightDemandCombineVo;

/**
 * @Description: 货运需求组合表Service类
 * @author UCE-lixueyuan
 * @date 2017年10月19日 下午05:15:20
 */
@Service("freightDemandCombineService")
public class FreightDemandCombineService {
	
	/**
	 * 注入货运需求组合表Dao
	 */
	@Resource
	private IFreightDemandCombineDao freightDemandCombineDao;
	
	/**
	 * @Description: 新增货运需求组合表
	 * @param freightDemandCombine 货运需求组合表
	 * @return 受影响行数
	 * @author UCE-lixueyuan
	 * @date 2017年10月19日 下午05:15:20
	 */
	public int addFreightDemandCombine(FreightDemandCombine freightDemandCombine) {
		return freightDemandCombineDao.insert(freightDemandCombine);
	}
	
	/**
	 * @Description: 修改货运需求组合表
	 * @param freightDemandCombine 货运需求组合表
	 * @return 受影响行数
	 * @author UCE-lixueyuan
	 * @date 2017年10月19日 下午05:15:20
	 */
	public int updateById(FreightDemandCombine freightDemandCombine) {
		return freightDemandCombineDao.updateById(freightDemandCombine);
	}
	
	/**
	 * @Description: 删除货运需求组合表
	 * @param id 主键
	 * @return 受影响行数
	 * @author UCE-lixueyuan
	 * @date 2017年10月19日 下午05:15:20
	 */
	public int deleteById(Long id) {
		return freightDemandCombineDao.deleteById(id);
	}
	
	/**
	 * @Description: 根据ID查询货运需求组合表
	 * @param id 主键
	 * @return 货运需求组合表
	 * @author UCE-lixueyuan
	 * @date 2017年10月19日 下午05:15:20
	 */
	public FreightDemandCombine findById(Long id) {
		return freightDemandCombineDao.findById(id);
	}
	
	/**
	 * @Description: 分页查询货运需求组合表
	 * @param freightDemandCombineVo 货运需求组合表
	 * @param page 分页参数
	 * @return 货运需求组合表
	 * @author UCE-lixueyuan
	 * @date 2017年10月19日 下午05:15:20
	 */
	public Pagination<FreightDemandCombineVo> findByPagination(FreightDemandCombineVo freightDemandCombineVo, Page page) {
		Pagination<FreightDemandCombineVo> paginationFreightDemandCombine = freightDemandCombineDao.findByPagination(freightDemandCombineVo, page);
		return paginationFreightDemandCombine;
	}
	
	/**
	 * 
	 * @Description: 批量 根据 需求组合编码 更新 需求组合状态
	 * @param freightDemandCombineVos
	 * @return
	 * @author lixueyuan
	 * @date 2017年10月27日 上午9:26:59
	 */
	public int  batchUpdateCombineStatus(List<String> combineCodes,FreightDemandCombineVo params){
		return freightDemandCombineDao.batchUpdateCombineStatus(combineCodes, params.getDemandCombineStatus(),params.getUpdateEmp(),params.getUpdateOrg(),params.getUpdateTime());
	}
	
	/**
	 * 
	 * @Description:根据条件查询需求组合
	 * @param freightDemandCombineVo
	 * @return
	 * @author laizhendong
	 * @date 2017年11月2日 下午7:37:18
	 */
	public List<FreightDemandCombineVo> findByCondition(FreightDemandCombineVo freightDemandCombineVo){
		return freightDemandCombineDao.findByCondition(freightDemandCombineVo);
	}

}