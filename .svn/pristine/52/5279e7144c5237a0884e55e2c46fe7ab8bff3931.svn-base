package cn.uce.suc.bkg.biz.impl.datamain;

import java.util.List;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;

import cn.uce.base.page.Page;
import cn.uce.base.page.Pagination;
import cn.uce.suc.bkg.biz.datamain.IExceptionManagerBiz;
import cn.uce.suc.bkg.entity.datamain.ExceptionManager;
import cn.uce.suc.bkg.vo.datamain.ExceptionManagerVo;
import cn.uce.suc.bkg.service.datamain.ExceptionManagerService;

/**
 * @Description: 运输异常管理BIZ实现类
 * @author yanglei
 * @date 2017年10月31日 下午03:48:43
 */
@Service("exceptionBiz")
public class ExceptionManagerBiz implements IExceptionManagerBiz {
	
	/**
	 * 注入运输异常管理Service
	 */
	@Resource
	private ExceptionManagerService exceptionService;
	
	/**
	 * @Description: 新增运输异常管理
	 * @param exception
	 * @return 受影响行数
	 * @author yanglei
	 * @date 2017年10月31日 下午03:48:43
	 */
	public int addException(ExceptionManager exception) {
		return exceptionService.addException(exception);
	}
	
	/**
	 * @Description: 修改运输异常管理
	 * @param exception 运输异常管理
	 * @return 受影响行数
	 * @author yanglei
	 * @date 2017年10月31日 下午03:48:43
	 */
	public int updateException(ExceptionManager exception) {
		return exceptionService.updateById(exception);
	}
	
	/**
	 * @Description: 删除运输异常管理
	 * @param id 主键
	 * @return 受影响行数
	 * @author yanglei
	 * @date 2017年10月31日 下午03:48:43
	 */
	public int deleteException(Long id) {
		return exceptionService.deleteById(id);
	}
	
	/**
	 * @Description: 根据ID查询运输异常管理
	 * @param id 主键
	 * @return 运输异常管理
	 * @author yanglei
	 * @date 2017年10月31日 下午03:48:43
	 */
	@Override
	public ExceptionManager findById(Long id) {
		return exceptionService.findById(id);
	}
	
	/**
	 * @Description: 分页查询运输异常管理
	 * @param exceptionVo 运输异常管理
	 * @param page 分页参数
	 * @return 运输异常管理
	 * @author yanglei
	 * @date 2017年10月31日 下午03:48:43
	 */
	public Pagination<ExceptionManagerVo> findByPagination(ExceptionManagerVo exceptionVo, Page page) {
		Pagination<ExceptionManagerVo> pagination = exceptionService.findByPagination(exceptionVo, page);
		return pagination;
	}
	/**
	 * @Description: 查询运输异常管理list
	 * @param exceptionVo 运输异常管理
	 * @return 运输异常管理
	 * @author yanglei
	 * @date 2017年11月7日 下午03:48:43
	 */
	@Override
	public List<ExceptionManager> findByVo(ExceptionManagerVo exceptionVo, Page page) {
		// TODO Auto-generated method stub
		return exceptionService.findByVo(exceptionVo,page);
	}

}