<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
	"-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.uce.suc.bkg.dao.price.IPricingRuleDetailRelDao">
	
	<sql id="Base_Column_List">
			id,org_code,org_name,
			detail_id,delete_flag,utf1,
			utf2,utf3,version,
			remark,create_org,create_emp,
			create_time,update_org,update_emp,
			update_time
	</sql>
	
	<sql id="Base_Column_Where">
	<where>
	    <if test="id != null">
		and id = #{id}
		</if>
	    <if test="orgCode != null">
		and org_code = #{orgCode}
		</if>
	    <if test="orgName != null">
		and org_name = #{orgName}
		</if>
	    <if test="detailId != null">
		and detail_id = #{detailId}
		</if>
	    <if test="deleteFlag != null">
		and delete_flag = #{deleteFlag}
		</if>
	    <if test="utf1 != null">
		and utf1 = #{utf1}
		</if>
	    <if test="utf2 != null">
		and utf2 = #{utf2}
		</if>
	    <if test="utf3 != null">
		and utf3 = #{utf3}
		</if>
	    <if test="version != null">
		and version = #{version}
		</if>
	    <if test="remark != null">
		and remark = #{remark}
		</if>
	    <if test="createOrg != null">
		and create_org = #{createOrg}
		</if>
	    <if test="createEmp != null">
		and create_emp = #{createEmp}
		</if>
	    <if test="createTime != null">
		and create_time = #{createTime}
		</if>
	    <if test="updateOrg != null">
		and update_org = #{updateOrg}
		</if>
	    <if test="updateEmp != null">
		and update_emp = #{updateEmp}
		</if>
	    <if test="updateTime != null">
		and update_time = #{updateTime}
		</if>
	</where>
	</sql>
	
	<update id="updateById" parameterType="cn.uce.suc.bkg.entity.price.PricingRuleDetailRel">
	UPDATE t_suc_bkg_pricing_rule_detail_rel
	<set>
		<if test="orgCode != null">
		org_code = #{orgCode},
		</if>
		<if test="orgName != null">
		org_name = #{orgName},
		</if>
		<if test="detailId != null">
		detail_id = #{detailId},
		</if>
		<if test="deleteFlag != null">
		delete_flag = #{deleteFlag},
		</if>
		<if test="utf1 != null">
		utf1 = #{utf1},
		</if>
		<if test="utf2 != null">
		utf2 = #{utf2},
		</if>
		<if test="utf3 != null">
		utf3 = #{utf3},
		</if>
		<if test="version != null">
		version = #{version},
		</if>
		<if test="remark != null">
		remark = #{remark},
		</if>
		<if test="createOrg != null">
		create_org = #{createOrg},
		</if>
		<if test="createEmp != null">
		create_emp = #{createEmp},
		</if>
		<if test="createTime != null">
		create_time = #{createTime},
		</if>
		<if test="updateOrg != null">
		update_org = #{updateOrg},
		</if>
		<if test="updateEmp != null">
		update_emp = #{updateEmp},
		</if>
		<if test="updateTime != null">
		update_time = #{updateTime},
		</if>
	</set>
	WHERE id = #{id}
	</update>
	
	<select id="findByPagination" parameterType="cn.uce.suc.bkg.vo.price.PricingRuleDetailRelVo" resultType="cn.uce.suc.bkg.vo.price.PricingRuleDetailRelVo">
		SELECT dl.* ,d.price_type
		FROM t_suc_bkg_pricing_rule_detail_rel dl
		LEFT JOIN t_suc_bkg_pricing_rule_detail d ON dl.detail_id = d.id AND d.delete_flag = '0'
		<where>
			<if test="priceType != null and priceType != ''">
				AND d.price_type = #{priceType} 
			</if>
			<if test="priceRuleCode != null and priceRuleCode != ''">
				AND d.price_rule_code = #{priceRuleCode}
			</if>
			<if test="ruleTypeCode != null and ruleTypeCode != ''">
				AND d.rule_type_code = #{ruleTypeCode}
			</if>
			<if test="orgCode != null and orgCode != ''">
				AND dl.org_code = #{orgCode}
			</if>
		</where>
	</select>
	
	<!-- 根据条件查询 -->
	<select id="findByCondition" parameterType="cn.uce.suc.bkg.vo.price.PricingRuleDetailRelVo" resultType="cn.uce.suc.bkg.vo.price.PricingRuleDetailRelVo">
		SELECT *
		FROM t_suc_bkg_pricing_rule_detail_rel
		<where>
			delete_flag != '1' 
			<if test="orgCode != null and orgCode != ''">
				AND org_code = #{orgCode}
			</if>
			<if test="detailId != null">
				AND detail_id = #{detailId} 
			</if>
		</where>
	</select>
	
	
	<!-- 根据定价规则详情id更新 -->
	<update id="batchUpdateByDetailId" parameterType="cn.uce.suc.bkg.entity.price.PricingRuleDetailRel">
		UPDATE t_suc_bkg_pricing_rule_detail_rel
		<set>
			<if test="deleteFlag != null">
			delete_flag = #{deleteFlag}
			</if>
		</set>
		WHERE detail_id = #{detailId}
	</update>
</mapper>